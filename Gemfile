source 'https://rubygems.org'

gem 'rails', '3.2.12'

gem 'sqlite3'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem "haml", ">= 3.0.0"
gem "haml-rails"
gem "jquery-rails"


