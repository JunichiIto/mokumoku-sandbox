  gem "rspec-rails", ">= 2.0.1"
  gem "capybara"
  gem 'debugger'
  gem 'factory_girl_rails'

  gem 'spork'
  gem 'rb-fsevent'
  gem 'terminal-notifier-guard'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'pry'
  gem 'pry-rails'
  gem 'pry-coolline'
  gem 'pry-remote'
  gem "pry-debugger"
  gem "pry-doc"
  gem 'pry-stack_explorer'
  gem 'hirb'
  gem 'hirb-unicode'
  gem 'awesome_print'
  gem 'pry-doc'
  gem 'awesome_print'
  gem 'database_cleaner'
end
